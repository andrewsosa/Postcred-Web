.container-fluid
  .grid-wrap      
    .row.equal
      each m in movies
        .col-6.col-sm-4.col-md-3.col-lg-2.card-wrap
          .md-card.bg-faded(movie=m)
            - url = 'http://localhost:3000/' + m.poster 
            .img-wrap
              img.lazy(data-original= url)
            .label
              span= m.name
              if (m.score.positiveVotes > (m.score.totalVotes/2))
                .scene.small Extra scene 👍
              else if m.score.totalVotes == 0
                .scene.small No votes yet 🤔
              else if (m.score.positiveVotes == (m.score.totalVotes/2))
                .scene.small Maybe extra scene 🤔
              else
                .scene.small No extra scene 👎
